@model SPOffice.UserInterface.Models.SupplierPOMailPreviewViewModel


<div id="mailcontainerDiv">



    <div style="max-width: 800px; font-size: 16px; line-height: 24px; font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif; color: #555; margin: auto; padding: 30px; border: 3px solid #adadad;">
        <table cellpadding="0" style="width: 100%; line-height: inherit; text-align: left;border-bottom-color:#944a83!important;border-bottom:thin solid">
            <tr class="top">
                <td style="width:400px;vertical-align: top;">
                <img src="@ViewBag.path" style="width:100%; width:150px;workAround:image"></td>
                <td colspan="2" style="vertical-align: top;  text-align:right">
                    <table style="width: 100%; line-height: inherit; text-align: left;">
                        <tr><td style="text-align:right;"><span style="font-size:25px">Supplier Purchase Order</span></td></tr>
                    </table>
                </td>
            </tr>
        </table>

        <table style="line-height:20px;margin-top:5px">
            <tr style="width:100%;">
                <td style="width:500px;"></td>
                <td style="width:500px;text-align:right;padding-right:75px">
                    <table style="width:100%;font-size:12px">
                        <tr style="width:100%"><td style="width:50%"></td><td style="text-align:left;">PO Number</td><td style="width:2%">:</td><td style="text-align:right;padding-left:15px;">@Model.SOVMobj.PONo</td></tr>
                        <tr style="width:100%"><td></td><td style="text-align:left;">PO Date</td><td style="width:2%">:</td><td style="text-align:right;padding-left:15px;">@Model.SOVMobj.PODate  </td></tr>
                    </table>
                    <span style="text-align:left;"></span><br />
                    <span style="text-align:left;"></span>
                </td>

            </tr>
        </table>
        <br />

        <table>
            <tr style="width:100%;">
                <td style="width:400px;text-align:left;font-size:15px">
                    <b>From</b><br />   @Model.SOVMobj.company.Name<br />
                    @Model.SOVMobj.ShipToAddress<br />
                </td>
                <td style="width:200px;"></td>
                <td style="width:400px;text-align:left;font-size:15px">
                   <b>To</b> <br />@Model.SOVMobj.SuppliersObj.CompanyName<br />
                    @Model.SOVMobj.SupplierMailingAddress<br />
                </td>
            </tr>

        </table>

        <br />


        <table>
            <tr>
                <td style="font-size:15px"><b>Sub</b><br />Supplier Purchase Order</td>
            </tr>
        </table>

        <br />
      @{
          if (Model.SOVMobj.BodyHeader != null)
          {
        <table>
            <tr>
              <td style="font-size:15px;">@Html.Raw(@Model.SOVMobj.BodyHeader)</td>                            
            </tr>
        </table>
          }
    }
        <br />
        <table id="ItemDetailsTable" style="font-family: arial, sans-serif; border-collapse: collapse; width: 100%; line-height: inherit; text-align: left;font-size:14px" cellspacing="0" width="100%">
            <thead>
                <tr style="border-bottom-style: solid;border-bottom-width: 2px;border-bottom-color: #eee;">
                    <th style="text-align: center;padding: 8px;">Sl No</th>
                    <th style="text-align: center;padding: 8px;">Material Code</th>
                    <th style="text-align: center;padding: 8px;">Material Description</th>
                    <th style="text-align: center;padding: 8px;">Unit</th>
                    <th style="text-align: center;padding: 8px;">Quantity</th>
                    <th style="text-align: center;padding: 8px;">Rate</th>
                    <th style="text-align: center;padding: 8px;">Amount</th>
                </tr>
                @if (Model.SOVMobj.SPODObj.SupplierPODetailList != null)
                {
                    int slno = 1;
                    foreach (var mp in Model.SOVMobj.SPODObj.SupplierPODetailList)
                    {
                        <tr style="text-align: right;padding: 8px;border-bottom-style: solid;border-bottom-width: 2px;border-bottom-color: #eee;">

                            <td style="text-align: center;padding: 8px;">@slno</td>
                            <td style="text-align: center;padding: 8px;">@mp.MaterialCode</td>
                            <td style="text-align: center;padding: 8px;">@mp.MaterialDesc</td>
                            <td style="text-align: center;padding: 8px;">@mp.UnitCode</td>
                            <td style="text-align: center;padding: 8px;">@mp.Qty</td>
                            <td style="text-align: center;padding: 8px;">@mp.Rate</td>
                            <td style="text-align: right;padding: 8px;">@mp.Amount</td>

                        </tr>
                        slno = slno + 1;
                    }
                }

            </thead>
        </table>
        <br />

        <table cellpadding="0" style="width: 100%; line-height: inherit; text-align: right;font-size:14px">

            <tr class="">
                <td style="vertical-align: top; padding: 5px;">
                    Gross Amount
                </td>

                <td style="vertical-align: top; text-align: right; padding: 5px;" align="right">
                    @Model.SOVMobj.GrossTotal
                </td>
            </tr>
            <tr class="item">
                <td style="vertical-align: top;  padding: 5px;">
                    Cash Discount
                </td>

                <td style="vertical-align: top; text-align: right; padding: 5px;" align="right" >
                    @Model.SOVMobj.Discount
                </td>
            </tr>
            <tr class="">
                <td style="vertical-align: top; padding: 5px;">
                    Tax Amount
                </td>

                <td style="vertical-align: top; text-align: right; padding: 5px;" align="right">
                    @Model.SOVMobj.TaxAmount
                </td>
            </tr>
            <tr class="">
                <td style="vertical-align: top; padding: 5px;" ></td>

                <td style="vertical-align: top; text-align: right; padding: 5px;" align="right"></td>
            </tr>

            <tr class="total">
                <td style="vertical-align: top; padding: 5px;"></td>

                <td style="vertical-align: top; text-align: right; border-top-style: solid; border-top-width: 2px; border-top-color: #eee; font-weight: bold; padding: 5px;" align="right">
                    Total: @Model.SOVMobj.TotalAmount
                </td>
            </tr>

        </table>
@{
    if (@Model.SOVMobj.BodyFooter != null)
    {
        <table style="width: 100%; line-height: inherit; text-align: left;">

            <tr class="details">
                <td style="vertical-align: top; padding: 5px 5px 20px;font-size:15px;">

                    @Html.Raw(@Model.SOVMobj.BodyFooter)
                </td>
            </tr>
        </table>
        }
    }
    </div>


</div>


