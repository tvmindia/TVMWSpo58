@model SPOffice.UserInterface.Models.CourierViewModel
@using UserInterface.App_Start
@{
    ViewBag.Title = "Courier";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@section styles {
    @Styles.RenderFormat(SiteKeys.StyleVersion, "~/Content/DataTables/css/datatable")
}
<div style="width:100%;">
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-truck"></i> @ViewBag.Title</a></li>
        
    </ol>
</div>


<section class="content" id="main">
    <div class="row">
        <div class="" id="btnPatchAttributeSettab" style="min-height:25px">

            @{
                var data = new { ActionType = "List" };
                @Html.Action("ChangeButtonStyle", "Courier", data);
            }
        </div>
    </div>
    <div class="row summaryboxes">

        <div class="clearfix visible-sm-block"></div>

    </div>
    <div class="row">
        &nbsp;
    </div>
    <div class="row tableContainer">
        <div class="col-md-12">
            <table id="CourierTable" class="table table-striped table-bordered table-hover customgrd" cellspacing="0" width="100%">
                <thead>
                    <tr class="text-center TableHead">
                        <th>ID</th>
                        <th>Courier No</th>
                        <th>Type</th>
                        <th>Transaction Date</th>
                        <th>TRK Ref.No</th>
                        <th>Tracking Link</th>
                        <th>Source</th>
                        <th>Destination</th>
                        <th>Agency</th>
                        <th>General Notes</th>
                        <th>...</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>

</section>

<section class="content">


    <div id="myNav" class="overlay">
        <div class="overlay-content">
            <div class="row" id="OverlayHeader">
                <div class="col-md-6" style="text-align:left">
                    <span id="lblCourierNO" class="SCHeader"></span>
                </div>
                <div class="col-md-6" id="btnPatchAdd" style="min-height:25px; padding-right:25px;">
                    @{
                        var data1 = new { ActionType = "Add" };
                        @Html.Action("ChangeButtonStyle", "Courier", data1);
                    }
                </div>
            </div>

            <div class="EntryForms" style="height:550px">
                @using (Ajax.BeginForm("InsertUpdateCourier", "Courier", new AjaxOptions { HttpMethod = "POST", Confirm = "", OnSuccess = "SaveSuccess", OnFailure = "NetworkFailure", AllowCache = false, LoadingElementId = "", OnBegin = "", OnComplete = "" }, new { @class = "form-horizontal", role = "form", @id = "CourierForm" }))
                {
                    @Html.Hidden("BindValue", "", htmlAttributes: new { @class = "", Value = ViewBag.value });
                    @Html.AntiForgeryToken()
                    <div class="col-md-12">
                        <div class="col-md-8">
                            <div class="form-group col-md-6">
                                <div class="col-md-12">
                                    @Html.HiddenFor(model => model.ID, htmlAttributes: new { @Value = Guid.Empty })
                                    @Html.HiddenFor(model => model.hdnFileID, htmlAttributes: new { @class = "", @id = "hdnFileDupID", @value = Guid.Empty })
                                    @Html.LabelFor(model=>model.CourierNO,htmlAttributes:new { @class="control-label"})
                                </div>
                                <div class="col-md-12">
                                    <div class="col-md-10">
                                        @Html.EditorFor(model=>model.CourierNO,new { htmlAttributes=new { @class="form-control HeaderBox",@id="txtCourierNO",@autofocus=true,@disabled="disabled",@placeholder="Autogenerated"} })                                       
                                        </div>
                                        <div  class="col-md-1"></div>
                                        <div class="col-md-1"></div>
                                    </div>
                                </div>

                                <div class="form-group col-md-6">
                                <div class="col-md-12">
                                    @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "control-label" })
                                    </div>


                                <div class="col-md-12">
                                    <div class="col-md-10">
                                        @Html.DropDownListFor(model => model.Type, Model.CourierTypeList, "-- Select Type --", new { @class = "form-control HeaderBox", style = "padding:4px 12px;", @id = "ddlType", onChange = "TypeOnChange(this);" })
                                        @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })

                                    </div>
                                    <div class="col-md-1 mandatory"></div>
                                    <div class="col-md-1"></div>
                                </div>

                            </div>

                            <div class="form-group col-md-6">
                                <div class="col-md-12">
                                    @Html.LabelFor(model => model.TrackingRefNo, htmlAttributes: new { @class = "control-label" })


                                </div>
                                <div class="col-md-12">
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.TrackingRefNo, new { htmlAttributes = new { @class = "form-control HeaderBox"@*, onkeyup = "TrackingRefnoOnChange(this);"*@ } })
                                        @Html.ValidationMessageFor(model => model.TrackingRefNo, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-md-1"></div>
                                    <div class="col-md-1"></div>
                                </div>

                            </div>
                            
                            <div class="form-group col-md-12"></div>
                            <div class="form-group col-md-6">
                                <div class="col-md-12">
                                    @Html.LabelFor(model => model.TrackingURL, htmlAttributes: new { @class = "control-label" })
                                </div>
                                <div class="col-md-12">
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.TrackingURL, new { htmlAttributes = new { @class = "form-control HeaderBox" } })
                                        @Html.ValidationMessageFor(model => model.TrackingURL, "", new { @class = "text-danger" })

                                    </div>
                                    <div class="col-md-1"></div>
                                    <div class="col-md-1"></div>
                                </div>

                            </div>
                            <div class="form-group col-md-6">
                                <div class="col-md-12">
                                    @Html.LabelFor(model => model.TransactionDate, htmlAttributes: new { @class = "control-label" })



                                </div>
                                <div class="col-md-12">
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.TransactionDate, new { htmlAttributes = new { @class = "form-control HeaderBox datepicker",@autofocus = true } })
                                        @Html.ValidationMessageFor(model => model.TransactionDate, "", new { @class = "text-danger" })

                                    </div>
                                    <div class="col-md-1 mandatory"></div>
                                    <div class="col-md-1"></div>
                                </div>
                            </div>
                            
                            <div class="form-group col-md-12"></div>
                            <div class="form-group col-md-6">
                                <div class="col-md-12">
                                    @Html.LabelFor(model => model.SourceName, htmlAttributes: new { @class = "control-label" })


                                </div>
                                <div class="col-md-12">
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.SourceName, new { htmlAttributes = new { @class = "form-control HeaderBox",@autofocus = true  } })
                                        @Html.ValidationMessageFor(model => model.SourceName, "", new { @class = "text-danger" })

                                    </div>
                                    <div class="col-md-1 mandatory"></div>
                                    <div class="col-md-1"></div>
                                </div>

                            </div>
                            <div class="form-group col-md-6">

                                <div class="col-md-12">
                                    @Html.LabelFor(model => model.DestName, htmlAttributes: new { @class = "control-label" })


                                </div>
                                <div class="col-md-12">
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.DestName, new { htmlAttributes = new { @class = "form-control HeaderBox" } })
                                        @Html.ValidationMessageFor(model => model.DestName, "", new { @class = "text-danger" })

                                    </div>
                                    <div class="col-md-1 mandatory"></div>
                                    <div class="col-md-1"></div>
                                </div>

                            </div>
                            
                            <div class="form-group col-md-12"></div>
                            <div class="form-group col-md-6">
                                <div class="col-md-12">
                                    @Html.LabelFor(model => model.SourceAddress, htmlAttributes: new { @class = "control-label" })


                                </div>
                                <div class="col-md-12">
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.SourceAddress, new { htmlAttributes = new { @class = "form-control HeaderBox",@rows="5" } })
                                        @Html.ValidationMessageFor(model => model.SourceAddress, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-md-1"></div>
                                    <div class="col-md-1"></div>
                                </div>

                            </div>
                            <div class="form-group col-md-6">
                                <div class="col-md-12">
                                    @Html.LabelFor(model => model.DestAddress, htmlAttributes: new { @class = "control-label" })


                                </div>
                                <div class="col-md-12">
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.DestAddress, new { htmlAttributes = new { @class = "form-control HeaderBox",@rows="5" } })
                                        @Html.ValidationMessageFor(model => model.DestAddress, "", new { @class = "text-danger" })

                                    </div>
                                    <div class="col-md-1"></div>
                                    <div class="col-md-1"></div>
                                </div>

                            </div>

                            <div class="form-group col-md-12"></div>
                            <div class="form-group col-md-6">
                                <div class="col-md-12">
                                    @Html.LabelFor(model => model.DistributedTo, htmlAttributes: new { @class = "control-label" })


                                </div>
                                <div class="col-md-12">
                                    <div class="col-md-10">

                                        @Html.EditorFor(model => model.DistributedTo, new { htmlAttributes = new { @class = "form-control HeaderBox" } })
                                        @Html.ValidationMessageFor(model => model.DistributedTo, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-md-1"></div>
                                    <div class="col-md-1"></div>
                                </div>

                            </div>
                            <div class="form-group col-md-6">
                                <div class="col-md-12">
                                    @Html.LabelFor(model => model.DistributionDate, htmlAttributes: new { @class = "control-label" })

                                </div>
                                <div class="col-md-12">
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.DistributionDate, new { htmlAttributes = new { @class = "form-control HeaderBox datepicker" } })
                                        @Html.ValidationMessageFor(model => model.DistributionDate, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-md-1"></div>
                                    <div class="col-md-1"></div>
                                </div>

                            </div>

                            <div class="form-group col-md-12"></div>
                            <div class="form-group col-md-6">
                                <div class="col-md-12">
                                    @Html.LabelFor(model => model.AgencyCode, htmlAttributes: new { @class = "control-label" })
                                </div>
                                <div class="col-md-12">
                                    <div class="col-md-10">
                                        @Html.DropDownListFor(model => model.AgencyCode, Model.AgencyList, "-- Select Agency --", new { @class = "form-control HeaderBox", style = "padding:4px 12px;", @id = "ddlAgency" })
                                        @Html.ValidationMessageFor(model => model.AgencyCode, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-md-1"></div>
                                    <div class="col-md-1"></div>
                                </div>

                            </div>
                            <div class="form-group col-md-12">
                                <div class="col-md-12">
                                    @Html.LabelFor(model => model.GeneralNotes, htmlAttributes: new { @class = "control-label" })


                                </div>
                                <div class="col-md-12">
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.GeneralNotes, new { htmlAttributes = new { @class = "form-control HeaderBox",rows="8" } })
                                        @Html.ValidationMessageFor(model => model.GeneralNotes, "", new { @class = "text-danger" })

                                    </div>
                                    <div class="col-md-1"></div>
                                    <div class="col-md-1"></div>
                                </div>

                            </div>
                        </div>

                        <div class="col-md-12  ">&nbsp;</div>
                        <div>
                            @Html.Partial("Fileupload")
                        </div>

                        <div class="col-md-12  ">&nbsp;</div>
                        <div class="col-md-12  ">&nbsp;</div>
                        <div class="col-md-12  ">&nbsp;</div>
                        <div class="col-md-12  ">&nbsp;</div>
                        <div class="col-md-12  ">&nbsp;</div>
                        <div class="col-md-12  ">&nbsp;</div>
                        <div class="col-md-12  ">&nbsp;</div>
                        <div class="col-md-12  ">&nbsp;</div>
                    </div>
                


                    <div class="">
                        <div class="col-md-offset-2 col-md-10" hidden="hidden">
                            <input id="btnInsertUpdateCourierAgency" type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
                }
                </div>
            </div>
        </div>
 
    <div class="preloader" id="prelaoder">
        <div class="col-md-12">
            <div class="col-md-12">Loading </div>
            <div class="col-md-12" style="margin-left:5%;margin-top:-3%;"><img src="~/Content/images/loading.gif" class="preloaderImg" /></div>
        </div>

    </div>
</section>


@section Scripts {
    @Scripts.RenderFormat(SiteKeys.ScriptVersion, "~/bundles/datatable")
    @Scripts.RenderFormat(SiteKeys.ScriptVersion, "~/bundles/jqueryunobtrusiveajaxvalidate")
    @Scripts.RenderFormat(SiteKeys.ScriptVersion, "~/bundles/Courier")
}






