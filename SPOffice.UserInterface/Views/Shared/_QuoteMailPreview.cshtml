                </td>

                <td style="vertical-align: top; text-align: right; padding: 5px;" align="right" valign="top">
                    @Model.quoteHeaderViewModel.GrossAmount
                </td>
            </tr>
            <tr class="item">
                <td style="vertical-align: top;  padding: 5px;" valign="top">
                    Cash Discount
                </td>

                <td style="vertical-align: top; text-align: right; padding: 5px;" align="right" valign="top">
                    @Model.quoteHeaderViewModel.Discount
                </td>
            </tr>
            <tr class="">
                <td style="vertical-align: top; padding: 5px;" valign="top">
                    Net Taxable Amount
                </td>

                <td style="vertical-align: top; text-align: right; padding: 5px;" align="right" valign="top">
                    @Model.quoteHeaderViewModel.NetTaxableAmount
                </td>
            </tr>
            <tr class="">
                <td style="vertical-align: top; padding: 5px;" valign="top">
