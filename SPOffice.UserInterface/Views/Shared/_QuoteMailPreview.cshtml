@model SPOffice.UserInterface.Models.QuoteMailPreviewViewModel


<div id="mailcontainerDiv">

    
    <style>
    .invoice-box{
        max-width:800px;
        margin:auto;
        padding:30px;
        border:1px solid #eee;
        box-shadow:0 0 10px rgba(0, 0, 0, .15);
        font-size:16px;
        line-height:24px;
        font-family:'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif;
        color:#555;
    }

    .invoice-box table{
        width:100%;
        line-height:inherit;
        text-align:left;
    }

    .invoice-box table td{
        padding:5px;
        vertical-align:top;
    }

    .invoice-box table tr td:nth-child(2){
        text-align:right;
    }

    .invoice-box table tr.top table td{
        padding-bottom:20px;
    }

    .invoice-box table tr.top table td.title{
        font-size:45px;
        line-height:45px;
        color:#333;
    }

    .invoice-box table tr.information table td{
        padding-bottom:40px;
    }

    .invoice-box table tr.heading td{
        background:#eee;
        border-bottom:1px solid #ddd;
        font-weight:bold;
    }

    .invoice-box table tr.details td{
        padding-bottom:20px;
    }

    .invoice-box table tr.item td{
        border-bottom:1px solid #eee;
    }

    .invoice-box table tr.item.last td{
        border-bottom:none;
    }

    .invoice-box table tr.total td:nth-child(2){
        border-top:2px solid #eee;
        font-weight:bold;
    }

    </style>
     <h1>Quote No:@Model.quoteHeaderViewModel.QuotationNo</h1>
    <div class="invoice-box">
        <table cellpadding="0" cellspacing="0">
            <tr class="top">
                <td colspan="2">
                    <table>
                        <tr class="heading">
                            <td>
                                Quote Subject
                            </td>

                           
                        </tr>
                        <tr class="details">
                            <td>
                             
                                @Model.quoteHeaderViewModel.QuoteSubject
                            </td>
                        </tr>
                        <tr class="heading">
                            <td>
                                Quote Head
                            </td>


                        </tr>
                        <tr class="details">
                            <td>
                             @Model.quoteHeaderViewModel.QuoteBodyHead
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>

          

           

           

            <tr class="heading">
                <td>
                  Items
                </td>

                <td>
                    
                </td>
            </tr>

         

          

           
          
        </table>
        <table id="ItemDetailsTable" style="font-family: arial, sans-serif;border-collapse: collapse;width: 100%;" cellspacing="0" width="100%">
                <thead>
                <tr class="">
                   
                    <th style="border: 1px solid #dddddd;text-align: left;padding: 8px;">SlNo.</th>
                    <th style="border: 1px solid #dddddd;text-align: left;padding: 8px;">Description</th>
                    <th style="border: 1px solid #dddddd;text-align: left;padding: 8px;">Unit</th>
                    <th style="border: 1px solid #dddddd;text-align: left;padding: 8px;">Quantity</th>
                    <th style="border: 1px solid #dddddd;text-align: left;padding: 8px;">Rate</th>
                    <th style="border: 1px solid #dddddd;text-align: left;padding: 8px;">Amount</th>
                  
                  

                </tr>
                @if (Model.quoteHeaderViewModel.quoteItemList != null)
                {
                    int slno=1;
                    foreach (var mp in Model.quoteHeaderViewModel.quoteItemList)
                    {
                        <tr style="border: 1px solid #dddddd;text-align: left;padding: 8px;">

                            <td style="border: 1px solid #dddddd;text-align: right;padding: 8px;">@slno</td>
                            <td style="border: 1px solid #dddddd;text-align: right;padding: 8px;">@mp.ProductDescription</td>
                            <td style="border: 1px solid #dddddd;text-align: right;padding: 8px;">@mp.UnitDescription</td>
                            <td style="border: 1px solid #dddddd;text-align: right;padding: 8px;">@mp.Quantity</td>
                            <td style="border: 1px solid #dddddd;text-align: right;padding: 8px;">@mp.Rate</td>
                            <td style="border: 1px solid #dddddd;text-align: right;padding: 8px;">@mp.Amount</td>

                        </tr>
                        slno = slno + 1;
                    }
                }
              
            </thead>
        </table>
     
        <table cellpadding="0" cellspacing="0">
        
            <tr class="">
                <td>
                    Gross Amount
                </td>

                <td>
                    @Model.quoteHeaderViewModel.GrossAmount
                </td>
            </tr>
            <tr class="item">
                <td>
                   Cash Discount
                </td>

                <td>
                    @Model.quoteHeaderViewModel.Discount
                </td>
            </tr>
            <tr class="">
                <td>
                    Net Taxable Amount
                </td>

                <td>
                    @Model.quoteHeaderViewModel.NetTaxableAmount
                </td>
            </tr>
            <tr class="">
                <td>
                    Tax Amount
                </td>

                <td>
                   @Model.quoteHeaderViewModel.TaxAmount
                </td>
            </tr>
            <tr class="">
                <td>
                    
                </td>

                <td>
                   
                </td>
            </tr>

            <tr class="total">
                <td></td>

                <td>
                   Total: @Model.quoteHeaderViewModel.TotalAmount
                </td>
            </tr>
           
        </table>
        <table>
            <tr class="heading">
                <td>
                    Terms&Conditions
                </td>


            </tr>
            <tr class="details">
                <td>

                    @Model.quoteHeaderViewModel.QuoteBodyFoot
                </td>
            </tr>
        </table>
    </div>
  

</div>





