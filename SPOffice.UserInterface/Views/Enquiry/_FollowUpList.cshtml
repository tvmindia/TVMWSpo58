@model SPOffice.UserInterface.Models.FollowUpListViewModel

<div class="col-md-12" style="text-align:initial;">
    <div class="box box-primary">
        <div class="box-header ui-sortable-handle">
            <i class="ion ion-clipboard" style="vertical-align:-11px;"></i>
            <h3 class="box-title" style="vertical-align:-11px;">Followup List</h3>
            <div class="pull-right no-border" id="divAddFollowUp" style="display:none;">
                <input type="hidden" id="hdnCountOpen" value=@ViewBag.Count />
                <button type="button" data-toggle="tooltip" onclick="FollowUp(1)" id="btnAddFollowup" class="btn btn-default pull-right"><i class="fa fa-plus"></i> Add followup</button>
            </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <!-- See dist/js/pages/dashboard.js to activate the todoList plugin -->
            <ul class="todo-list ui-sortable" style="max-height:350px;overflow:auto;">
                @if (Model.FollowUpList != null)
                {
                    for (int i = 0; i < Model.FollowUpList.Count; i++)
                    {
                        <li class="" style="">
                            <!-- drag handle -->
                            <span class="label label-warning pull-right">@Model.FollowUpList[i].PriorityDescription</span>
                            <span class="label label-primary pull-left" style="color:green">@Model.FollowUpList[i].Status</span>
                            <!-- checkbox -->
                            @*<input type="checkbox" value="">*@
                            <!-- todo text -->
                            <!-- Emphasis label -->
                            <small class="label label-danger"><i class="fa fa-calendar-o"></i> @Model.FollowUpList[i].FollowUpDate <i class="fa fa-clock-o"></i> @Model.FollowUpList[i].FollowUpTime</small>
                            <!-- General tools such as edit or delete-->
                            @if (Model.FollowUpList[i].Subject != null)
                            {
                                <br />
                                <span class="text" style="width:90%;border-bottom:1px solid #a8a7a7"> @Model.FollowUpList[i].Subject </span>
                            }
                            @if (Model.FollowUpList[i].GeneralNotes != null)
                            {
                                <br />
                                <span class="text" style="width:90%;font-weight:100"><i class="fa fa-sticky-note-o" ></i> @Model.FollowUpList[i].GeneralNotes </span>
                            }
                            
                            <div class="tools">
                                <i class="fa fa-edit" onclick="FollowUp(id)" id=@Model.FollowUpList[i].ID></i>
                                @*<i class="fa fa-trash-o"></i>*@
                            </div>
                        </li>
                    }
                }
                @if (Model.FollowUpList.Count == 0)
                {
                    <li class="" style="">
                        <span class="text" style="width:90%;font-weight:100"><i class=""></i> No followup records found </span>
                    </li>
                        }
           </ul>
        </div>
        <!-- /.box-body -->
        
    </div>
</div>

