@model SPOffice.UserInterface.Models.ProformaMailPreviewViewModel


<div id="mailcontainerDiv">




    <div style="max-width: 800px; font-size: 16px; line-height: 24px; font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif; color: #555; margin: auto; padding: 30px; border: 3px solid #adadad;">
        <table cellpadding="0" cellspacing="0" style="width: 100%; line-height: inherit; text-align: left;border-bottom-color:#944a83!important;border-bottom:thin solid">
            <tr class="top">
                @*<td style="width:400px;vertical-align: top;  " valign="top"><img src=http://www.santhiplastics.com/images/logo.png style="width:100%; max-width:100px;"></td>*@
                <td style="width:400px;vertical-align:top;" valign="top"><img src="@ViewBag.path" style="width:100%; max-width:100px;"></td>
                <td colspan="2" style="vertical-align: top;  text-align:right" valign="top">
                    <table style="width: 100%; line-height: inherit; text-align: left;">
                        <tr><td style="text-align:right;"><span style="font-size:25px">Proforma Invoice</span></td></tr>
                    </table>

                </td>
            </tr>
        </table>

        <table style="line-height:20px;margin-top:5px">
            <tr style="width:100%;">
                <td style="width:600px;"></td>
                <td style="width:400px;text-align:right">
                    <table style="width:100%;font-size:12px">
                        <tr style="width:100%"><td style="width:50%"></td><td style="text-align:left;">Invoice No</td><td style="width:2%">:</td><td style="text-align:right;padding-left:5px;">@Model.proformaHeaderViewModel.InvoiceNo</td></tr>
                        <tr style="width:100%"><td></td><td style="text-align:left;">Date</td><td style="width:2%">:</td><td style="text-align:right;padding-left:5px;">@Model.proformaHeaderViewModel.InvoiceDate  </td></tr>
                    </table>

                    <span style="text-align:left;"></span><br />
                    <span style="text-align:left;"></span>
                </td>

            </tr>
        </table>
        <br />

        <table>
            <tr style="width:100%;">
                <td style="width:400px;text-align:left;font-size:15px">
                    <b>From</b><br />  @Model.proformaHeaderViewModel.company.Name<br />
                    @Model.proformaHeaderViewModel.company.BillingAddress<br />
                </td>
                <td style="width:200px;"></td>
                <td style="width:400px;text-align:left;font-size:15px">
                    <b>To</b> <br /> @Model.proformaHeaderViewModel.customer.CustomerName<br />
                    @Model.proformaHeaderViewModel.customer.BillingAddress<br />
                </td>
            </tr>

        </table>

        <br />


        <table>
            <tr>
                <td style="font-size:15px"><b>Sub</b><br />@Model.proformaHeaderViewModel.Subject</td>
            </tr>
        </table>

        <br />

        <table>
            <tr>
                <td style="font-size:15px;">@Html.Raw( @Model.proformaHeaderViewModel.BodyHead)</td>
            </tr>
        </table>
        <br />
        <table id="ItemDetailsTable" style="font-family: arial, sans-serif; border-collapse: collapse; width: 100%; line-height: inherit; text-align: left;" cellspacing="0" width="100%">
            <thead>
                <tr style="border-bottom-style: solid;border-bottom-width: 2px;border-bottom-color: #eee;">
                    <th style="text-align: center;padding: 8px;">SlNo.</th>
                    <th style="text-align: center;padding: 8px;">Description</th>
                    <th style="text-align: center;padding: 8px;">Unit</th>
                    <th style="text-align: center;padding: 8px;">Quantity</th>
                    <th style="text-align: center;padding: 8px;">Rate</th>
                    <th style="text-align: center;padding: 8px;">Amount</th>
                </tr>
                @if (Model.proformaHeaderViewModel.quoteItemList != null)
                {
                    int slno = 1;
                    foreach (var mp in Model.proformaHeaderViewModel.quoteItemList)
                    {
                        <tr style="text-align: right;padding: 8px;border-bottom-style: solid;border-bottom-width: 2px;border-bottom-color: #eee;">

                            <td style="text-align: center;padding: 8px;">@slno</td>
                            <td style="text-align: center;padding: 8px;">@mp.ProductDescription</td>
                            <td style="text-align: center;padding: 8px;">@mp.UnitDescription</td>
                            <td style="text-align: center;padding: 8px;">@mp.Quantity</td>
                            <td style="text-align: center;padding: 8px;">@mp.Rate</td>
                            <td style="text-align: right;padding: 8px;">@mp.Amount</td>

                        </tr>
                        slno = slno + 1;
                    }
                }

            </thead>
        </table>
        <br />

        <table cellpadding="0" cellspacing="0" style="width: 100%; line-height: inherit; text-align: right;">

            <tr class="">
                <td style="vertical-align: top; padding: 5px;" valign="top">
                    Gross Amount
                </td>

                <td style="vertical-align: top; text-align: right; padding: 5px;" align="right" valign="top">
                    @Model.proformaHeaderViewModel.GrossAmount
                </td>
            </tr>
            <tr class="item">
                <td style="vertical-align: top;  padding: 5px;" valign="top">
                    Cash Discount
                </td>

                <td style="vertical-align: top; text-align: right; padding: 5px;" align="right" valign="top">
                    @Model.proformaHeaderViewModel.Discount
                </td>
            </tr>
            <tr class="">
                <td style="vertical-align: top; padding: 5px;font-size:18px;" valign="top">
                    Net Taxable Amount
                </td>

                <td style="vertical-align: top; text-align: right; padding: 5px; font-size:18px;" align="right" valign="top">
                    @Model.proformaHeaderViewModel.NetTaxableAmount
                </td>
            </tr>

            <tr class="">
                <td style="vertical-align: top; padding: 5px;" valign="top"></td>

                <td style="vertical-align: top; text-align: right; border-top-style:solid; border-top-width:2px; border-top-color:#eee;padding: 5px;" align="right" valign="top"></td>
            </tr>

            <tr class="">
                <td style="vertical-align: top;padding:5px;"valign="top">
                    CGST(@Model.proformaHeaderViewModel.CGST
                    <span>&#37</span>)
                </td>
                <td style="vertical-align: top; text-align: center; padding: 5px;" align="right" valign="top">
                   
                    <span style="float:right">@ViewBag.cgst</span>
                </td>
               
            </tr>
            <tr class="">
                <td style="vertical-align: top; padding:5px" valign="top">
                    SGST(@Model.proformaHeaderViewModel.SGST
                    <span>&#37</span>)
                </td>
                <td style="vertical-align: top; text-align: center; padding: 5px;"  align="right" valign="top">
                   
                    <span style="float:right">@ViewBag.sgst</span>
                </td>
                
            </tr>
            <tr class="">
                <td style="vertical-align: top; padding: 5px;" valign="top">
                    IGST(@Model.proformaHeaderViewModel.IGST
                    <span>&#37</span>)
                </td>
                <td style="vertical-align: top; text-align: center; padding: 5px;" align="right" valign="top">
                   
                    <span style="float:right">@ViewBag.igst</span>
                </td>
                
            </tr>

            <tr class="">
                <td style="vertical-align: top; padding: 5px; font-size:18px;" valign="top">
                    Tax Amount
                </td>

                <td style="vertical-align: top; text-align: right; padding: 5px;border-top-style:solid; border-top-width:2px; border-top-color:#eee; font-size:18px" align="right" valign="top">
                    @Model.proformaHeaderViewModel.TaxAmount
                </td>
            </tr>
            <tr class="">
                <td style="vertical-align: top; padding: 5px;" valign="top"></td>

                <td style="vertical-align: top; text-align: right; padding: 5px;" align="right" valign="top"></td>
            </tr>

            <tr class="total">
                <td style="vertical-align: top; padding: 5px;" valign="top"></td>

                <td style="vertical-align: top; text-align: right; border-top-style: solid; border-top-width: 2px; border-top-color: #eee; font-weight: bold; padding: 5px; font-size:18px;" align="right" valign="top">
                    Total: @Model.proformaHeaderViewModel.TotalAmountFormatted
                </td>
            </tr>

        </table>
        <table style="width: 100%; line-height: inherit; text-align: left;">

            <tr class="details">
                <td style="vertical-align: top; padding: 5px 5px 20px;font-size:15px;" valign="top">

                    @Html.Raw( @Model.proformaHeaderViewModel.BodyFoot)
                </td>
            </tr>
        </table>
    </div>


</div>
